<h2 class="mb-3" style="text-align: center;">Sản phẩm khuyến mãi</h2>

<div class="container-fluid">
    <div class="row">
        {{#each san_pham}}
        <div class="col-3 card_item">
            <div class="card mb-3 ">
                <div class="card_img">
                    <img src="/images/product/p{{id_sp}}/{{id_sp}}.png" class="card-img-top" alt="{{ten_sp}}"
                        title="{{ten_sp}} : {{gia_sp}}">
                    <a class="btn btn-dark quick_view" href="/web/views_sp/{{id_sp}}" role="button"> <i
                            class="fas fa-eye"></i> Quick view</a>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">{{ten_sp}}</h5>
                        <h4 class="card-text" style="color: rgb(218, 109, 109);">{{f_giam_gia_sp}}</h4>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h8 class="card-text" style="color: black; text-decoration: line-through; ">{{f_gia_sp}}</h8>
                        <h6 class="card-text" style="color: rgb(120, 120, 202);">{{gia_moi}}</h6>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
