<div class="card">
    <div class="card">
        <div class="card-header">
          Chỉnh sửa thông tin của khách hàng
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="id_kh" class="form-label">ID của khách hàng</label>
                    <input type="text" class="form-control" id="id_kh" name="id_kh" readonly value="{{this.khachhang.id_kh}}"> 
                </div>

                <div class="mb-3">
                    <label for="ten_kh" class="form-label">Ten của khách hàng</label>
                    <input type="text" class="form-control" id="ten_kh" name="ten_kh" value="{{this.khachhang.ten_kh}}"> 
                </div>
                <div class="mb-3">
                    <label for="so_dt_kh" class="form-label">Số điện thoại khách hàng</label>
                    <input type="text" class="form-control" id="so_dt_kh" name="so_dt_kh" value="{{this.khachhang.so_dt_kh}}"> 
                </div>
                <div class="mb-3">
                    <label for="pass" class="form-label">PassWord</label>
                    <input type="password" class="form-control" id="pass" name="pass" readonly value="{{this.khachhang.pass}}"> 
                </div>
                <div class="mb-3">
                    <label for="dia_chi_kh" class="form-label">Địa chỉ</label>
                    <input type="text" class="form-control" id="dia_chi_kh" name="dia_chi_kh" value="{{this.khachhang.dia_chi_kh}}"> 
                </div>
                <div class="mb-3">
                    <label for="quyen" class="form-label">Quyền</label>
                    <input type="number" class="form-control" id="quyen" name="quyen" value="{{this.khachhang.quyen}}"> 
                </div>
                <div class="mb-3">
                    <a name="" id="" class="btn btn-success" href="/admin/khach_hang" role="button"> <i class="fas fa-backward"></i></a>
                    <button type="submit" class="btn btn-danger" formaction="/admin/khach_hang/del"> <i class="fas fa-trash"></i></button>
                    <button type="submit" class="btn btn-primary" formaction="/admin/khach_hang/update">Update</button>
                </div>  
            </form>

            

        <div class="card-footer text-muted">
            Chỉnh sửa hoặc xóa thông tin của khách hàng
        </div>
    </div>
</div>

