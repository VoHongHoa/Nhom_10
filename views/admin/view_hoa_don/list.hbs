        <div class="card-header d-flex justify-content-between ">
            <h1>Danh sách hóa đơn</h1>
            <a name="" id="" class="btn btn-outline-success" href="/admin/hoa_don/add" role="button">Thêm hóa đơn</a>
        </div>
        <div class="card-body">
            <p>Khong co du lieu</p>
        </div>
    </div>
{{else}}
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h1>Danh sách hóa đơn</h1>
        <a name="" id="" class="btn btn-outline-success" href="/admin/hoa_don/add" role="button">Thêm hóa đơn</a>
    </div>
    <div class="card-body">
       <table class="table table-hover">
           <thead>
               <tr>
                  <th scope="col">ID hóa đơn</th>
                  <th scope="col">ID khách hàng</th>
                  <th scope="col">Trạng thái hóa đơn</th>
                  <th scope="col">Ngày hóa đơn</th>
                  <th scope="col">Chỉnh sửa</th>
               </tr>
           </thead>
           <tbody>
              {{#each this.hoadon}}
              <tr>
                  <td>{{id_hd}}</td>
                  <td>{{id_kh}}</td>
                  <td>{{trang_thai_hd}}</td>
                  <td>{{ngay_hd}}</td>
                  <td>
                       <a class="btn btn-primary btn-sm" href="/admin/hoa_don/edit?id={{id_hd}}" role="button">
                         <i class="fas fa-pencil-alt"></i>
                      </a>

                  </td>
              </tr>
              {{/each}}
           </tbody>
       </table>
    </div>
</div>
    
{{/if}}

    </div>
